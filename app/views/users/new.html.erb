<%= form_for @user do |f| %>
	<%= f.label :username, "Your username here"%>
	<%= f.text_field :username, value: "seba" %><br>

	<%= f.label :email  %>
	<%= f.email_field  :email, placeholder: "example@example.com" %><br>

	<%= f.label :password %>
	<%= f.password_field :password %><br> 

	<%= f.submit %>

	<% @user.errors.full_messages.each do |i| %>
		<p><%= i %></p>
	<% end %> 
<% end %>